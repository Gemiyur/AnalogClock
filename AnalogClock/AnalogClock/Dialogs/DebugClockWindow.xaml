<Window x:Class="AnalogClock.Dialogs.DebugClockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnalogClock.Dialogs"
        mc:Ignorable="d"
        Title="Свойства часов"
        Width="200" Height="200" ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Closed="Window_Closed">

    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
                <Setter Property="Margin" Value="0,10,0,0" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10,10,10,10">
        <StackPanel>
            <CheckBox Content="Часы включены"
                      Style="{StaticResource CheckBoxStyle}"
                      IsChecked="{Binding Path=IsRunning, Mode=TwoWay}" />

            <CheckBox Content="Прозрачный циферблат"
                      Style="{StaticResource CheckBoxStyle}"
                      IsChecked="{Binding Path=IsTransparent, Mode=TwoWay}" />

            <CheckBox Content="Цифры на циферблате"
                      Style="{StaticResource CheckBoxStyle}"
                      IsChecked="{Binding Path=IsDigitsShown, Mode=TwoWay}" />

            <CheckBox Content="Римские цифры"
                      Style="{StaticResource CheckBoxStyle}"
                      IsChecked="{Binding Path=IsRomanDigits, Mode=TwoWay}" />

            <Button x:Name="DigitsColorButton" Content="Цвет цифр"
                    Width="80" Height="25" HorizontalAlignment="Left"
                    Margin="0,10,0,0" Click="DigitsColorButton_Click" />
        </StackPanel>
    </Grid>
</Window>
